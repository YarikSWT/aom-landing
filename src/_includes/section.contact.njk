{% for item in collections.sections %}
  {% if item.data.type === 'contact' %}
    <div id="contact" class="w-full min-h-screen flex flex-col justify-center items-center bg-gray-800">
      <div class="self-center text-center w-full xl:w-1/3 px-4 sm:px:0">
        <h2 class="font-bold tracking-widest text-gray-200 text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-gray-400 text-xl">
          {{ item.templateContent | safe }}
        </div>
        <form class="w-full max-w-lg my-20 mx-auto" action="POST" action="https://www.formbackend.com/f/ae49ba2e3fada23b" method="POST" id="registration-form" target="_blank" validate>
          <div class="flex items-center border-b border-purple-600 py-2">
            <label for="name"></label>
            <input id="name" class="appearance-none bg-transparent border border-transparent w-full text-gray-200 focus:outline-none focus:bg-gray-300 focus:text-gray-800 focus:border-gray-400 mr-3 py-2 px-3" type="text" value="" name="NAME" placeholder="Иванов Иван" aria-label="Имя" required>
          </div>
          <div class="flex items-center border-b border-purple-600 py-2">
            <label for="email"></label>
            <input id="email" class="appearance-none bg-transparent border border-transparent w-full text-gray-200 focus:outline-none focus:bg-gray-300 focus:text-gray-800 focus:border-gray-400 mr-3 py-2 px-3" type="email" value="" name="EMAIL" placeholder="ivan@mail.ru" aria-label="Почта" required>
          </div>
           <div class="flex items-center border-b border-purple-600 py-2">
            <label for="phone"></label>
            <input id="phone" class="appearance-none bg-transparent border border-transparent w-full text-gray-200 focus:outline-none focus:bg-gray-300 focus:text-gray-800 focus:border-gray-400 mr-3 py-2 px-3" type="email" value="" name="PHONE" placeholder="+7 (800) 555 35 35" aria-label="Телефон" required>
          </div>
          <div class="mt-3">
            <button class="px-10 py-2 text-gray-200 bg-purple-600 shadow-md text-lg hover:bg-gray-800 hover:border-red w-full">Отправить</button>
          </div>
          <label class="block text-gray-200 text-left px-2 mt-4" for="gdpr_37169">
            <input class="leading-tight" type="checkbox" id="gdpr_37169" name="gdpr[37169]" value="Y" required>
            <span class="text-md font-light">
              Я согласен с <a href="/privacy" class="underline hover:no-underline hover:text-purple-600" title="Политики конфеденциальности" target="_blank">Политикой конфеденциальности</a>
            </span>
          </label>
        </form>
      </div>
    </div>
  {% endif %}
{% endfor %}