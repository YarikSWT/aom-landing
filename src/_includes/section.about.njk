{% for item in collections.sections %}
  {% if item.data.type === 'about' %}
    <div id="about" class="w-full min-h-screen flex flex-col justify-center items-center py-6 sm:py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="font-bold tracking-wider text-gray-800 text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-black text-xl">
          {{ item.templateContent | safe }}
        </div>
         <video autoplay muted loop playinline class="max-w-full mx-auto mt-8" style="border-radius: 30px">
          <source type="video/webm" src="/video/juicy-teamwork.webm" />
          <source type="video/mp4" src="/video/juicy-teamwork.mp4" />
        </video>
      </div>
      <div class="flex flex-row w-full justify-center mt-12">
        <a class="px-10 py-2 text-gray-200 bg-purple-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red" href="#features">Наши преимущства</a>
      </div>
    </div>
  {% endif %}
{% endfor %}